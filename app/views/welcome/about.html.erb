<style type="text/css">
	body {
		background: <%= @color %>;
	}
</style>

<h1>About Me</h1>
<p>Welcome to my page.</p>

<p>My favorite color is <%= @color %>.</p>
<p>My shoe size is <%= @size %>.</p>

<% if @size > 12 %>  <%# The variable cannot be compared bc its stored as a string %>
	<p>My feet are huge!</p>
<% end %>

<%= link_to "Green", about_path(color: "green"), class: "btn btn-success"	%>
<%= link_to "Orange", about_path(color: "orange"), class: "btn btn-warning"	%>
<%= link_to "Nada", about_path, class: "btn btn-default"	%>

